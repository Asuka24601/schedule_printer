/* Components/v-text/v-text.wxss */

.bar {
  width: 100%;
  height: 2px;
  background-color: gray;
  opacity: 0.3;
  margin-top: 1.5vh;
}

.text_main {
  padding: unset;
  margin: unset;
  display: flex;
  flex-direction: column;
}

.text_text.cent_text {
  font-family: '等线','Yu Gothic UI Light';
  font-weight: normal;
  white-space:pre-line;
  word-spacing:1px;
  line-height: 3.5vh;
  overflow: auto;
  font-size: 1.1rem;
}

.text_cent {
  width: 90vw;
  margin-bottom: 3vh;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.text_box {
  width: fit-content;
  /* height: auto; */
  margin: 0.5vw;
}

.text_box>image {
  height: 25vh;
  width: auto;
}

.text_text {
  color: black;
  font-weight: bold;
  font-family: 'Centaur','Segoe UI Emoji';
  font-size: x-large;
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 2vh;
  padding: 1vh 5vw 2vh 1vw;
}