.quotebox {
  position: relative;
  font-family: "zcool_my";
  text-align: center;
  color: white;
}

.breastplate1 {
  z-index: -1;
  width: 125vw;
  height: 65vw;
  position: absolute;
  margin-top: -3vh;
  margin-left: -65vw;
}

.quotebox .topbar1 {
  font-size: smaller;
  text-shadow: 2px 2px 1px hsl(0, 0%, 0%);
  z-index: 3;
  padding-top: 12vh;
  margin-left: 7.5vw;
}

.quotebox .topbar1>view {
  width: 85vw;
}

.main {
  width: auto;
  height: auto;
  margin-top: 5vh;
}

