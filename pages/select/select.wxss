.table_grid {
  /* margin-top: 10vh; */
  margin-left:1.25vw;
  font-size: small;
  font-family: Georgia, 'Times New Roman', Times, serif;
}

.table_area {
  display: grid;
  grid-template: "a b c d e f g h" 10vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 "x m m m m m m m" 20vh
                 /10vw 12.5vw 12.5vw 12.5vw 12.5vw 12.5vw 12.5vw 12.5vw
}

.top_bar_items {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: black solid 1px;
  margin: 0.5px;
  border-radius: 5%;
}

.x_area {
  grid-area: x;
  /* background-color: greenyellow; */
  display: grid;
  grid-template-rows: repeat(12,1fr);
}

.m_area {
  grid-area: m;
  /* background-color: burlywood; */
  display: grid;
  grid-template-columns: repeat(7,1fr);
}

.m_area .m_area_items {
  display: grid;
  grid-template-rows: repeat(12,1fr);
}

