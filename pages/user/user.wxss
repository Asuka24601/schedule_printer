/* pages/user/user.wxss */

.topimage {
  position: relative;
  width: 100%;
}

.cent {
  position: relative;
  width: 100%;
}

.info_head {
  display: grid;
  grid-template-columns: 6fr 15fr;
  height: calc(100vw / 21 * 6);
  width: 100%;
  overflow: hidden;
  margin-top: -7.5vh;
}

.info_head .left_part {
  position: relative;
  width: 100%;
  height: calc(100vw / 21 * 6);
}

.info_head .right_part {
  text-overflow:clip;
  height: calc(100vw / 21 * 6);
  width: 100%;
  margin-top: 7.5vh;
}

.info_head .left_part .view_box {
  width: 90%;
  height: 90%;
  border-radius: 50%;
  border: white solid 3px;
  box-sizing: border-box;
  overflow: hidden;
  margin: 1vh 0vw 1vh 5vw;
}

.info_head .right_part .right_part_text {
  text-align: right;
  font-weight: bolder;
  margin: 2vh 2.5vw 1vh 4vw;
  text-shadow: 0.2px 0.2px 0.25px rgb(255, 255, 255);
  border-bottom: solid rgba(202, 202, 202, 0.75) 1px;
  padding-bottom: 1px;
  box-sizing: border-box;
  font-style: oblique;
  color: rgba(141, 141, 141, 0.75);
  text-shadow: 0.5px 0.5px 0.5px rgb(255, 255, 255);
}

.headIcon {
  width: 100%;
}

.mid_part {
  display: flex;
  flex-direction:column;
}

.mid_part .username {
  flex: 1;
  margin:3vh 1vw 1vh 6vw;
  font-weight: bolder;
  font-size: 25px;
  display: flex;
}

.mid_part .username .user_info_icon {
  width: 15px;
  height: 15px;
  margin:1.5vh 0vw 0vh 3vw;
  box-sizing: border-box;
  background-repeat: no-repeat;
  background-size: 15px 15px;
}

.mid_part .username .username_icon {
  background-image: url("data:image/png;base64,");
}

.mid_part .username .usergender_icon_man {
  background-image: url("data:image/png;base64,"); 
}

.mid_part .username .usergender_icon_woman {
  background-image: url("data:image/png;base64,");
}

.mid_part .username .usergender_icon_unknow {
  background-image: url("data:image/png;base64,");
}

.mid_part .user_info {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.mid_part .user_info .user_info_item {
  border: rgba(255, 255, 255, 0.5) solid 1px;
  font-size: 12px;
  box-sizing: border-box;
  margin:0.5vh 1vw 1vh 3vw;
  padding: 1.5vw;
  background-color: rgba(212, 212, 212, 0.5);
  color:rgba(180, 179, 179, 0.60);
  font-weight: bolder;
  border-radius: 10%;
}

.mid_part .user_info .user_info_item:nth-child(1) {
  margin-left: 6vw;
}

.mid_part .user_profile {
  flex: 1;
  margin:3vh 1vw 1vh 6vw;
  display: flex;
  flex-direction: column;
}

.mid_part .user_profile .profile_text {
  text-align: left;
  font-style: oblique;
  font-size: small;
  font-weight: bolder;
  color: rgba(202, 202, 202, 0.75);
  text-shadow: 0.5px 0.5px 0.5px rgb(182, 182, 182);
  align-self:center;
}

.user_profile .lab {
  color: black;
  font-size: xx-large;
  /* position: absolute; */
}

.lab.lab_left {
  color: blue;
  align-self: flex-start;
}

.lab.lab_right {
  color: red;
  align-self: flex-end;
}